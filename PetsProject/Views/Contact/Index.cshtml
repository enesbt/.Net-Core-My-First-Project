@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/_MainLayout.cshtml";
}
<br /><br />
<h3>Bize Ulaş</h3>
<br /><br />
<form method="post" class="form-group">
    <label>İsminiz</label>
    <input class="form-control" asp-for="Name" />
    <br />
    <label>Mail Adresiniz</label>
    <input type="email" class="form-control" asp-for="Mail" />
    <br />
    <label>Mesajınız</label>
    <textarea class="form-control" asp-for="Message" ></textarea>
    <br />
    <input class="btn btn-outline-dark" type="submit" value="Gönder" />
</form>

