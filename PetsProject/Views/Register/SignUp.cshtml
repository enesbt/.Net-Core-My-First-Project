@model PetsProject.Models.RegisterViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/Layouts/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-action="SignUp"  method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label>İsminiz</label>
                            <input type="text" class="form-control" asp-for="Name" required="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Mail Adresiniz</label>
                            <input type="text" class="form-control" asp-for="Email" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3 form-group">
                            <label>Kullanıcı Adınız</label>
                            <input type="text" class="form-control" asp-for="UserName" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Şifreniz</label>
                            <input type="password" class="form-control" asp-for="Password" required="">
                            <span asp-validation-for="Password"></span>
                        </div>

                    </div>
                   <input type="submit" class="btn btn-success" value="Kayıt OL" />
                </form>

            </div>
        </div>
    </div>
</section>



</html>
