@model EntityLayer.Concrete.PetPost
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Layouts/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<body>
	<section class="banner-bottom">
		<!--/blog-->
		<div class="container">
			<div class="row">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">
								<a href="single.html">
									<img style="width:100%" src="@Model.ImageUrl" class="img-fluid" alt="">
								</a>
							</div>
							<div class="blog-info-middle">
								<ul>
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @Model.PostTime.ToString("dd-MMM-yyyy")
										</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-thumbs-up"></i> @Model.Name
										</a>
									</li>
									
								</ul>
							</div>
						</div>

						<h3>
							<a href="single.html">@Model.Title</a>
						</h3>
						<p>
							@Model.Description
						</p>

					</div>
				<a href="/ContactMe/ContactMe/@Model.PetPostId" class="btn btn-success">Bana Ulaş</a>
				
				<a href="/Complain/Complain/@Model.PetPostId" class="btn btn-danger">Şikayet Et</a>
				</div>

				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						<div class="tech-btm">
							<img src="~/HomePage/images/banner1.jpg" class="img-fluid" alt="">
						</div>
						@await Component.InvokeAsync("DefaultDetailsPetTypes")
						<div class="tech-btm">
							<h4>Top stories of the week</h4>

							<div class="blog-grids row mb-3">
								<div class="col-md-5 blog-grid-left">
									<a href="single.html">
										<img src="~/HomePage/images/1.jpg" class="img-fluid" alt="">
									</a>
								</div>
								<div class="col-md-7 blog-grid-right">

									<h5>
										<a href="single.html">Pellentesque dui, non felis. Maecenas male non felis </a>
									</h5>
									<div class="sub-meta">
										<span>
											<i class="far fa-clock"></i> 20 Jan, 2018
										</span>
									</div>
								</div>

							</div>
							<div class="blog-grids row mb-3">
								<div class="col-md-5 blog-grid-left">
									<a href="single.html">
										<img src="~/HomePage/images/6.jpg" class="img-fluid" alt="">
									</a>
								</div>
								<div class="col-md-7 blog-grid-right">
									<h5>
										<a href="single.html">Pellentesque dui, non felis. Maecenas male non felis </a>
									</h5>
									<div class="sub-meta">
										<span>
											<i class="far fa-clock"></i> 20 Feb, 2018
										</span>
									</div>
								</div>

							</div>
						</div>
					
						<div class="single-gd tech-btm">
							<h4>Recent Post</h4>
							<div class="blog-grids">
								<div class="blog-grid-left">
									<a href="single.html">
										<img src="~/HomePage/images/b1.jpg" class="img-fluid" alt="">
									</a>
								</div>
								<div class="blog-grid-right">

									<h5>
										<a href="single.html">Pellentesque dui, non felis. Maecenas male</a>
									</h5>
								</div>
								<div class="clearfix"> </div>
							</div>
						</div>
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>


</body>

</html>