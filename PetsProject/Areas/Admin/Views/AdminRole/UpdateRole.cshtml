@model PetsProject.Areas.Admin.Models.RoleUpdateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/Layouts/_AdminLayout.cshtml";
}

<h1>UpdateRole</h1>

<form method="post" class="form-group">
    <label>Role Id</label>
    <input type="text" asp-for="id" class="form-control" />

    <label>Role Başlığı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <input class="btn btn-outline-success" type="submit" value="Güncellle" />
</form>
