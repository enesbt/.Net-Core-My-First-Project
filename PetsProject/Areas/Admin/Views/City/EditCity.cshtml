@model EntityLayer.Concrete.City
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditCity";
    Layout = "~/Views/Shared/Layouts/_AdminLayout.cshtml";
}

<h5>Şehir Düzenle</h5>

<form method="post" class="form-group">
    <input asp-for="CityId" class="form-control" hidden />
    <label>Şehir</label>
    <input asp-for="CityName" class="form-control" />
    <br />
    <input class="btn btn-danger" value="Düzenle" type="submit"  />
</form>