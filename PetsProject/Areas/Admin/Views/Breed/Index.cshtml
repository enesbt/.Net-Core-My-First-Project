@model List<EntityLayer.Concrete.PetBreed>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/_AdminLayout.cshtml";
}

<h6>Cinsler</h6>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Cins Adı</th>
        <th>Aktif</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PetBreedId</td>
            <td>@item.PetBreedName</td>
            <td>@item.Status</td>
            <td><a href="/Admin/Breed/ActiveType/@item.PetBreedId" class="btn btn-outline-danger">Aktif Yap</a></td>
            <td><a href="/Admin/Breed/PassiveType/@item.PetBreedId" class="btn btn-outline-danger">Pasif Yap</a></td>
            <td><a href="/Admin/Breed/EditBreed/@item.PetBreedId" class="btn btn-outline-danger">Düzenle</a></td>
        </tr>

    }
</table>

<a href="/Admin/Breed/AddBreed" class="btn btn-outline-danger">Yeni Cins Ekle</a>