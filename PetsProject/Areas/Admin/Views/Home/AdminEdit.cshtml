@model PetsProject.Areas.Admin.Models.AdminEditViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AdminEdit";
    Layout = "~/Views/Shared/Layouts/_AdminLayout.cshtml";
}

<h6>Profil Düzenle</h6>

<form class="form-group" asp-action="AdminEdit" asp-controller="Home">

    <label>İsim</label>
    <input asp-for="Name" class="form-control" />
    <br />
    <label>Kullanıcı Adı</label>
    <input asp-for="UserName" class="form-control" />
    <br />
    <label>Mail</label>
    <input asp-for="Email" class="form-control" />
    <br />
    <label>Şifre</label>
    <input asp-for="Password" class="form-control" />
    <br />
   
    <input class="btn btn-outline-success" type="submit" value="Düzenle" />
</form>