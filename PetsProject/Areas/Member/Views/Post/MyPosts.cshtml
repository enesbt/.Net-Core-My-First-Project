@model List<EntityLayer.Concrete.PetPost>
@{
    ViewData["Title"] = "MyPosts";
    Layout = "~/Views/Shared/Layouts/_MemberLayout.cshtml";
}
<br />
<h5>İlanlarım</h5>
<br />
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <td>İsim</td>
                                <td>Telefon</td>
                                <td>Başlık</td>
                                <td>Açıklama</td>
                                <td>Tarih</td>
                                <td>Kategori</td>
                                <td>Aktif</td>
                                <td>Detay</td>
                                <td>Düzenle</td>                       
                             
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.PostTime.ToString("dd-MMM-yyyy")</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.Status</td>
                                    <td><a href="/Member/Post/DetailsPost/@item.PetPostId" class="btn btn-outline-primary">Detay</a></td>
                                    <td><a href="/Member/Post/EditPost/@item.PetPostId" class="btn btn-outline-warning">Düzenle</a></td>
                                  
                                </tr>
                            }                                              
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
